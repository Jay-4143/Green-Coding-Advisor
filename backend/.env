MAIL_SSL=false

# ============================================
# Redis Configuration (OPTIONAL)
# ============================================
# For caching and background task processing
# Local: redis://localhost:6379/0
# Redis Cloud: redis://:password@host:port
REDIS_URL=redis://localhost:6379/0

# ============================================
# AI/ML Configuration (OPTIONAL)
# ============================================
# Only needed if using ML features
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key

# ============================================
# Carbon Tracking (OPTIONAL)
# ============================================
# For real-time carbon intensity data
ELECTRICITY_MAPS_API_KEY=your-electricity-maps-api-key
CODECARBON_REGION=usa
CODECARBON_OFFLINE=True
CODECARBON_LOG_LEVEL=warning

# ============================================
# Rate Limiting (OPTIONAL)
# ============================================
RATE_LIMIT_PER_MINUTE=60

# ============================================
# File Upload (OPTIONAL)
# ============================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=py,java,js,ts,cpp,c,h

# ============================================
# Monitoring & Logging (OPTIONAL)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn
