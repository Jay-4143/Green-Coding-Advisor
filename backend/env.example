# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/green_coding_advisor
DATABASE_URL_ASYNC=postgresql+asyncpg://username:password@localhost:5432/green_coding_advisor

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=True
MAIL_SSL=False

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# AI/ML Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key

# Carbon Tracking
ELECTRICITY_MAPS_API_KEY=your-electricity-maps-api-key

# Environment
ENVIRONMENT=development
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=py,java,js,ts,cpp,c,h

# Monitoring
SENTRY_DSN=your-sentry-dsn
